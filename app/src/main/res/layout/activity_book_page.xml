<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".BookPageActivity">

    <!-- Book Name -->
    <TextView
        android:id="@+id/bookNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- Shop 1 -->
    <RelativeLayout
        android:id="@+id/shop1Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookNameTextView"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/shop1NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Okian:"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/shop1PriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="16sp"/>

        <!-- Add a clickable link here for Shop 1 if needed -->
        <!-- Example: <Button
            android:id="@+id/shop1LinkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/shop1PriceTextView"
            android:text="Shop 1 Link"
            android:textSize="16sp"/> -->
    </RelativeLayout>

    <!-- Shop 2 (Similar layout as Shop 1) -->
    <RelativeLayout
        android:id="@+id/shop2Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop1Layout"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/shop2NameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Targul Cartii:"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Shop 2 views here (name, price, and link if needed) -->
    </RelativeLayout>

    <!-- Shop 3 (Similar layout as Shop 1) -->
    <RelativeLayout
        android:id="@+id/shop3Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop2Layout"
        android:layout_marginTop="16dp">

        <!-- Shop 3 views here (name, price, and link if needed) -->
    </RelativeLayout>
</RelativeLayout>
